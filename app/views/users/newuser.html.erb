<h1> Creating New Account </h1>
<%= form_for @user, :url => {:controller=>"users", :action => "create"} do |f| %>
	<div class="field">
	  	<%= f.label "ID" %> <br />
	  	<%= f.text_field :_id %>
	</div>
	<div class="field">
  		<%= f.label :password %> <br/>
  		<%= f.password_field :password %>
	</div>
	<div class="field">
  		<%= f.label :email %> <br />
  		<%= f.text_field :email %>
	</div>
	<br />
  <div class="actions">
    <%= f.submit %>
   </div>
   
   <ul>
  <% @user.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
   
<% end %>

<p><%= link_to 'Back', home_welcome_path %></p>